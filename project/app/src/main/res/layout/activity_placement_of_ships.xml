<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ship_placement"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacementOfShipsActivity"
    android:layout_margin="60px">

    <ImageView
        android:id="@+id/image_ship_of1"
        android:layout_width="60px"
        android:layout_height="60px"
        app:srcCompat="@drawable/ship_sprite" />

    <ImageView
        android:id="@+id/image_ship_of2"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_below="@id/image_ship_of1"
        android:layout_marginTop="20px"
        app:srcCompat="@drawable/ship_length_of_2" />

    <ImageView
        android:id="@+id/image_ship_of3"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_below="@id/image_ship_of2"
        android:layout_marginTop="20px"
        app:srcCompat="@drawable/ship_length_of_3" />

    <ImageView
        android:id="@+id/image_ship_of4"
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_below="@id/image_ship_of3"
        android:layout_marginTop="20px"
        app:srcCompat="@drawable/ship_length_of_4" />

    <TableLayout
        android:id="@+id/layouttable_set_ships"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"></TableLayout>

    <Button
        android:id="@+id/button_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="rotation" />
    <Button
        android:id="@+id/button_auto_placement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_rotation"
        android:layout_centerHorizontal="true"
        android:text="Auto Place" />

    <Button
        android:id="@+id/button_start_battle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#8BC34A"
        android:text="Play" />
</RelativeLayout>